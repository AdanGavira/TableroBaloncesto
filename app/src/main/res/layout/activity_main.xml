<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="#F8F9FA">

        <!-- TÃ­tulo Principal -->
        <TextView
            android:id="@+id/tituloPrincipal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/marcador_de_baloncesto"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#1976D2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="32dp" />

        <!-- Contenedor Principal para Equipos -->
        <LinearLayout
            android:id="@+id/contenedorPrincipal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/tituloPrincipal"
            app:layout_constraintBottom_toTopOf="@id/botonesInferiores"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <!-- Equipo Local -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/equipo_local"
                android:padding="20dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/EquipoLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/equipo_local"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2" />

                <TextView
                    android:id="@+id/PuntuacionLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/puntuacion_cero"
                    android:textSize="80sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="32dp" />

                <!-- Botones Local -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnLocalMas1"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="@string/mas1"
                        android:textSize="18sp"
                        android:textColor="#1976D2"
                        android:background="@drawable/btn_border_blue"
                        android:layout_marginEnd="6dp" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnLocalMas2"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="@string/mas2"
                        android:textSize="18sp"
                        android:textColor="#1976D2"
                        android:background="@drawable/btn_border_blue"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnLocalMenos1"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="@string/menos1"
                        android:textSize="18sp"
                        android:textColor="#1976D2"
                        android:background="@drawable/btn_border_blue"
                        android:layout_marginStart="6dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Equipo Visitante -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/equipo_visitante"
                android:padding="20dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/EquipoVisitante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/equipo_visitante"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800" />

                <TextView
                    android:id="@+id/PuntuacionVisitante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/puntuacion_cero"
                    android:textSize="80sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="32dp" />

                <!-- Botones Visitante -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnVisitanteMas1"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="@string/mas1"
                        android:textSize="18sp"
                        android:textColor="@color/naranja"
                        android:background="@drawable/btn_border_orange"
                        android:layout_marginEnd="6dp" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnVisitanteMas2"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="@string/mas2"
                        android:textSize="18sp"
                        android:textColor="#FF9800"
                        android:background="@drawable/btn_border_orange"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnVisitanteMenos1"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="@string/menos1"
                        android:textSize="18sp"
                        android:textColor="#FF9800"
                        android:background="@drawable/btn_border_orange"
                        android:layout_marginStart="6dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Botones Inferiores -->
        <LinearLayout
            android:id="@+id/botonesInferiores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="40dp">


            <Button
                android:id="@+id/btnReiniciar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/reiniciar"
                android:textSize="16sp"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/negro"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnVerResultados"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/resultado"
                android:textSize="16sp"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/negro"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>